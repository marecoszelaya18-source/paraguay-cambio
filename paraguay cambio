function convertirAGuaranies() {
    let tasa = parseFloat(document.getElementById("tasa").value);
    let monto = parseFloat(document.getElementById("guaranies").value);
    if (isNaN(monto) || isNaN(tasa)) {
        alert("Por favor, ingresa n√∫meros v√°lidos.");
        return;
    }
    let resultado = monto / tasa;
    document.getElementById("resultadoReales").textContent = 
        `${monto.toLocaleString()} Gs = ${resultado.toFixed(2)} R$`;
}

function convertirAReales() {
    let tasa = parseFloat(document.getElementById("tasa").value);
    let monto = parseFloat(document.getElementById("reales").value);
    if (isNaN(monto) || isNaN(tasa)) {
        alert("Por favor, ingresa n√∫meros v√°lidos.");
        return;
    }
    let resultado = monto * tasa;
    document.getElementById("resultadoGuaranies").textContent = 
        `${monto.toFixed(2)} R$ = ${resultado.toLocaleString()} Gs`;
}
